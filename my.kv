<LoginWidget>:
    GridLayout:
        id: grid
        cols: 1
        pos_hint_x: None
        pos_hint_y: None
        
        size_hint: None, None
        size: root.width/1.5, root.height/4
        pos: root.width/2 - self.width/2, root.height/2 - self.height/2
        TextInput:
            id: email
            hint_text: "Username"
            multiline: False
            pos_hint: {"center_x": .5, "center_y": .6}
        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False
            pos_hint: {"center_x": .5, "center_y": .5}
        Button:
            text: "Login"
            pos_hint: {"center_x": .5, "center_y": .4}
            on_release: 
                root.login()
                app.root.current = 'screen2'


<MainWidget>:
    id : mainWidget
    do_default_tab: False
    TabbedPanelItem:
        id: tab1
        text: "Duyurular"
        ScrollView:
            GridLayout:
                spacing: 20
                size_hint: 1, None
                height: self.minimum_height
                id: rv1grid
                cols: 1
    TabbedPanelItem:
        id: tab2
        text: "Ödevler"
        ScrollView:
            GridLayout:
                spacing: 20
                size_hint: 1, None
                height: self.minimum_height
                id: rv2grid
                cols: 1
    TabbedPanelItem:
        id: tab3
        text: "Canlı Dersler"
        ScrollView:
            GridLayout:
                spacing: 20
                size_hint: 1, None
                height: self.minimum_height
                id: rv3grid
                cols: 1
<ScreenOne>:
    LoginWidget:
        id: login

<ScreenTwo>:
    MainWidget:
        id: main
<ScreenManager>:
    ScreenOne:
        name: 'screen1'
    ScreenTwo:
        name: 'screen2'